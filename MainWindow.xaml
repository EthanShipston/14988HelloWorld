<Window x:Class="_184988HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184988HelloWorld"
        mc:Ignorable="d"
        Title="Box of code" Height="320" Width="500">
    <StackPanel>
        <Label x:Name="message" Content="Hello world!"/>
        <TextBox x:Name="txtName" Text="Enter your name here..."/>
        <Button x:Name="btnGreeting" Content="Click for greeting" Click="btnGreeting_Click"/>
    </StackPanel>
</Window>
